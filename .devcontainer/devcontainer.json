{
  "name": "Hugo Site Development",
  "image": "mcr.microsoft.com/devcontainers/universal:3",
  "features": {
    "ghcr.io/devcontainers/features/hugo:1": {
      "version": "latest",
      "extended": true
    },
    "ghcr.io/devcontainers/features/go:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    }
  },
  "postCreateCommand": "hugo mod get -u && hugo server -D -b=\"https://improved-journey-1313.preview.app.github.dev/\" --appendPort=false",
  "forwardPorts": [1313],
  "portsAttributes": {
    "1313": {
      "label": "Hugo Server",
      "onAutoForward": "notify"
    }
  }
}